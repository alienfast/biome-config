/**
 * Base Biome configuration for universal JavaScript/TypeScript projects.
 * Includes formatting, VCS integration, assist settings, and base linter rules.
 */
{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "assists": {
    "actions": { "source": { "useSortedKeys": "on" } },
    "enabled": true
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "bracketSameLine": false,
      "bracketSpacing": true,
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    },
    "globals": []
  },
  "linter": {
    "rules": {
      "complexity": {
        "useLiteralKeys": {
          "fix": "safe",
          "level": "error"
        },
        "useOptionalChain": {
          "fix": "safe",
          "level": "error"
        }
      },
      "correctness": {
        "noUnusedFunctionParameters": {
          "fix": "safe",
          "level": "error"
        },
        "noUnusedImports": {
          "fix": "safe",
          "level": "error"
        },
        "noUnusedVariables": {
          "fix": "unsafe",
          "level": "error"
        }
      },
      "recommended": true,
      "style": {
        "useTemplate": { "fix": "safe", "level": "error" }
      },
      "suspicious": {
        "noDoubleEquals": {
          "fix": "safe",
          "level": "error"
        },
        "noExplicitAny": "off"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true,
    "useIgnoreFile": true
  }
}
