# Auto detect text files and perform LF normalization
* text=auto

# JavaScript/TypeScript files
*.js text eol=lf
*.cjs text eol=lf
*.mjs text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows scripts
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Lock files
yarn.lock text eol=lf
package-lock.json text eol=lf
pnpm-lock.yaml text eol=lf